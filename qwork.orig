#!/bin/bash

### usage: ./qwork <number-of-workers> <arguments-for-work>

mod=$1
shift
for i in `seq 0 $(($mod-1))`; do
cat <<EOT > jobscript
#PBS -l walltime=12:00:00,mem=16GB
#PBS -l ncpus=16
#PBS -l wd
#PBS -M nci-notify@tqft.net
#PBS -m abe
module load dot
module load java
EOT
echo /home/251/ssm251/projects/toolkit/work -h 11.0 -r $i,$mod -c 16 -q $* >> jobscript
echo "Submitting job:"
cat jobscript
qsub jobscript
done
